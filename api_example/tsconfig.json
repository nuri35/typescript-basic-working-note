{
  "compilerOptions": {
    "target": "ES2016",

    "sourceMap": true,

    "removeComments": true,

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "strict": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",

    "skipLibCheck": true
  }
}
